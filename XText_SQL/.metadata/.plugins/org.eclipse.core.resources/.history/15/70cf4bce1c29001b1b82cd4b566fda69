grammar mydsl.MyDsl with org.eclipse.xtext.common.Terminals

generate myDsl "http://www.MyDsl.mydsl"

Model:
	Element += Element*;
	
Element:
	CREATE | ALTER | INSERT | SELECT | DELETE  ;
	

SELECT: => SELECT1 | SELECT2;

SELECT1:
	"SELECT" instr += INSTRUCTION* 
	from += I_FROM
;

SELECT2:
	"SELECT" instr += INSTRUCTION* "AS"
	from += I_FROM
;
	
DOUBLE: 
	FLOAT
;
FLOAT: INT'.'INT;
terminal CHAR: "'" ID "'";

I_FROM: 
	"FROM" nameTable=ID ;

DELETE:
	"DELETE" I_FROM ";" ;

INSERT:
	"INSERT""INTO" nameT=ID "VALUES" "(" (literals+=SLiteral)* ")" ;

SLiteral:
	typeINT; //| {SLiteral} STRING | {SLiteral} DOUBLE | {SLiteral} CHAR;


typeINT: integer | bigint | smallint;

smallint: {smallint} "smallint";
bigint: {bigint} "bigint";
integer: {integer} "int";


INSTRUCTION:
	nameC=ID","
;

CREATE: 
	"CREATE" keywords += Keyword+;

Keyword:
	TABLE ;
	
Fuctions:
	SUM
;

SUM:
	"(" ")"
;

TABLE:
	"TABLE" nameS=ID "(" cont += Cont+ 	");";

Cont:
	nomeTabela=ID datatype=DATATYPE"(" INT ")" typeNULL=TYPENULL",";

	
ALTER:
	"ALTER" keywords += Keyword+
;


enum DATATYPE:
	VARCHAR2 = "VARCHAR2" | DOUBLE = "DOUBLE";
	
enum TYPENULL:
	NOT = "NOT NULL" | NULL = "NULL"
;
